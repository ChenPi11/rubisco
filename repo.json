{
  "name": "rubisco",
  "version": "0.1.0",
  "description": "C+++ Repository Utilities.",
  "maintainer": "ChenPi11 <wushengwuxi-msctinoulk@outlook.com>",
  "license": "GPL-3.0",
  "hooks": {
    "lint": {
      "run": ".rubisco/lint.yaml"
    },
    "update-po": {
      "exec": "cd po && make update-po -B"
    },
    "build": {
      "run": ".rubisco/build.yaml"
    },
    "format": {
      "exec": "python -m isort rubisco"
    },
    "clean": {
      "workflow": [
        {
          "name": "Clean workflow",
          "remove": [
            "build",
            "dist",
            "*/**/__pycache__",
            ".rubisco/*.log",
            "*.7z",
            "*.gz",
            "*.xz",
            "*.zip",
            "rubisco-*"
          ],
          "strict": false
        }
      ]
    }
  }
}
